<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
	    	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img",fallback: "no_image.jpg" %><br>
	    	<table class="table">
	    		<tbody>
	    			<tr>
	    				<th>name</th>
	    				<th><%= user.name %></th>
	    			</tr>
	    			<tr>
	    				<th>introduction</th>
	    				<th><%= user.introduction %></th>
	    			</tr>
				</tbody>
		    </table>
		    <p><%= link_to edit_user_path(user), class: "edit_user_#{user.id}" do %><span class= "col-xs-12 btn btn-default btn-block glyphicon glyphicon-wrench" aria-hidden="true"></span>
		    	<% end %>
		    <br>
			<h2>New book</h2>
      		<%= form_for(book) do |f| %>
				<div class="field row">
				<label class="title">Title</label><br>
				<%= f.text_field :title, class: "col-xs-12" %>
				</div><br>
				<div class="field row">
				<label class="title">opinion</label><br>
				<%= f.text_area :body, class: "col-xs-12" %>
			    </div><br>
				<div class="actions row">
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
				</div>

			<% end %>