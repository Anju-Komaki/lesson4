<div class="container">
  <h2>User info</h2>
     <% if @user.errors.any? %>
      <div class="error_explanation">
       <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   </div>
  <% end %>
   <div class="form-body">
   <%= form_for(@user) do |f| %>
    <div class="field">
     <label class="user_name">Name</label>
     <%= f.text_field :name %>
    </div><br>
    <div class="field">
     <label class="user_image">Image</label><br>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field">
     <label class="user_introduction">Introduction</label><br>
     <%= f.text_area :introduction %>
    </div>
    <div class="actions">
     <%= f.submit "Update User" %>
    </div>
    <% end %>
  </div>
</div>