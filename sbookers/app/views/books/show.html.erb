<div class="container">
	<% if flash[:success]%>
    <div class="message"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:message]%>
    <div class="message"><%= flash[:message] %></div>
    <% end %>
	<div class="row">
		<div class="col-xs-3">
			<h2>New book</h2>
      		<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
    				<div id="error_explanation">
      				<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      				<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    				</ul>
   					</div>
				<% end %>
				<div class="field row">
				<label class="title">Title</label><br>
				<%= f.text_field :title, class: "col-xs-12" %>
				</div><br>
				<div class="field row">
				<label class="title">opinion</label><br>
				<%= f.text_area :body, class: "col-xs-12" %>
			    </div><br>
				<div class="actions row">
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
				</div>

			<% end %>
	    </div>
	</div>
</div>

<h1>Book details</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
				<td><%= link_to "Edit", edit_book_path(@book) %></td>
				<td>
				<% if @book.user == current_user %>
				<%= link_to "destroy", book_path(@book), method: :delete %>
				<% end %>
				</td>
			</tr>
	</tbody>
</table>

