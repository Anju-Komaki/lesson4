<h1>Book details</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
				<td><%= link_to "Edit", edit_book_path(@book) %></td>
				<td>
				<% if @book.user == current_user %>
				<%= link_to "destroy", book_path(@book), method: :delete %>
				<% end %>
				</td>
			</tr>
	</tbody>
</table>

