<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>New book</h2>
      		<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
    				<div id="error_explanation">
      				<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      				<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    				</ul>
   					</div>
				<% end %>
				<div class="field row">
				<label class="title">Title</label><br>
				<%= f.text_field :title, class: "col-xs-12" %>
				</div><br>
				<div class="field row">
				<label class="title">opinion</label><br>
				<%= f.text_area :body, class: "col-xs-12" %>
			    </div><br>
				<div class="actions row">
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
				</div>

			<% end %>
	    </div>
	</div>
</div>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img" %></td>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>