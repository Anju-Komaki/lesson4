<div class="sidebar">
	<h3 class="profile-name"><%= @user.name %></h3>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img" %>
	<% if @user.id == current_user.id %>
	<p><%= link_to "edit profile", edit_user_path(@user), class:"pull-right" %></p>
	<% end %>
</div>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>
