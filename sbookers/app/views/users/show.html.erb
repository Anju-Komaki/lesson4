<% if flash[:update]%>
<div class="message"><%= flash[:update] %></div>
<% end %>
<div class="container">
				<% if @book.errors.any? %>
    				<div id="error_explanation">
      				<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      				<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    				</ul>
   					</div>
				<% end %>
				<%= render 'books/list', user: @user, book: @book %>
</div>

	<div class="col-xs-9">
	<h1>Books</h1>
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colsplan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= link_to user_path(@user.id), class: "user_#{@user.id}" do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
					<% end %>
				</td>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
	</table>
	</div>
  </div>
</div>