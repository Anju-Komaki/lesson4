<div class="container">
<% if flash[:update]%>
<div class="message"><%= flash[:update] %></div>
<% end %>
 <div class="row">
 	<div class="col-xs-3">
		<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img",fallback: "no_image.jpg" %><br>
		<table class="table">
		<tbody>
	 	<tr>
	    <th>name</th>
	    <th><%= @user.name %></th>
	    </tr>
	    <tr>
	    <th>introduction</th>
	    <th><%= @user.introduction %></th>
	    </tr>
		</tbody>
		</table>
		<% if @user.id == current_user.id %>
		<div class="row"><%= link_to "" ,edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></div>
		<% end %>
		<h2>New book</h2>
      		<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
    				<div id="error_explanation">
      				<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      				<ul>
      				<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      				<% end %>
    				</ul>
   					</div>
				<% end %>
				<div class="field row">
				<label class="title">Title</label><br>
				<%= f.text_field :title,class: "col-xs-12" %>
				</div><br>
				<div class="field row">
				<label class="title">opinion</label><br>
				<%= f.text_area :body, class: "col-xs-12" %>
			    </div><br>
				<div class="actions row">
				<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
				</div>

			<% end %>
	</div>
	<div class="col-xs-9">
	<h1>Books</h1>
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colsplan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-rounded pull-left profile-img" %></td>
				<td>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
	</table>
	</div>
  </div>
</div>